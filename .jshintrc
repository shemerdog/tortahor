{
	// "maxerr"		: 50,		// {int} Maximum # of errors before stopping

	// Enforcing
	"bitwise"		: true,		// true: Prohibit bitwise operators (&, |, ^, etc.)
	"curly"			: true,		// true: Require {} for every new block or scope
	"eqeqeq"		: true,		// true: Require triple equals (===) for comparison
	"forin"			: true,		// true: Require filtering for..in loops with obj.hasOwnProperty()
	"futurehostile"	: true,		// true: Show warnings regarding builtin indentifiers in future JS versions
	"latedef"		: true,		// true: Require variables/functions to be defined before being used
	"noarg"			: true,		// true: Prohibit use of `arguments.caller` and `arguments.callee`
	"nonew"			: true,		// true: Prohibit use of constructors for side-effects (without assignment)
	"undef"			: true,		// true: Require all non-global variables to be declared (prevents global leaks)
	"unused"		: true,	    // true: Require all defined variables be used
	"strict"		: "implied",// true: Requires all functions run in ES5 Strict Mode
	"trailing"		: true,		// true: Prohibit trailing whitespaces
	"trailingcomma"	: true,		// true: require trailing comma in arrays and objects
	"maxdepth"		: 4,		// {int} Max depth of nested blocks (within functions)
	"maxstatements" : 10,		// {int} Max number statements per function
	"maxcomplexity" : 10,		// {int} Max cyclomatic complexity per function
	"maxlen"		: 100,		// {int} Max number of characters per line
	
	// Relaxing
	"esversion"		: 8,			// true: Allow ES.next (ES6) syntax (ex: `const`)
	
	// Environments
	"devel"			: true,		// Development/debugging (alert, confirm, etc)
	"node"			: true,		// Node.js
    "nonstandard"	: true,		// Widely adopted globals (escape, unescape, etc)
    "mocha"         : true,     // Mocha BDD testing environment
	
	// Custom Globals
	"predef"		: [ ]		// additional predefined global variables
	}